<%= form_for(@challenge) do |f| %>
  <% if @challenge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@challenge.errors.count, "error") %> prohibited this challenge from being saved:</h2>

      <ul>
      <% @challenge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :winner_id %><br>
    <% players_array = Player.all.map { |player| [player.name, player.id] } %>
    <%= f.select :winner_id, options_for_select(players_array), :prompt => 'Select One' %>
  </div>

  <div class="field">
    <%= f.label :loser_id %><br>
    <% players_array = Player.all.map { |player| [player.name, player.id] } %>
    <%= f.select :loser_id, options_for_select(players_array), :prompt => 'Select One' %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>

  <br />
<% end %>
